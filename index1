    <!-- Script Toggle Sidebar & Dropdown -->
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function() {
            document.querySelector(".sidebar").classList.toggle("show");
        });

        function toggleDropdown(menuId) {
            let menu = document.getElementById(menuId);
            menu.classList.toggle("show");
        }

        


    function tutupPopup() {
        document.getElementById("popupLokasi").style.display = "none";
    }

    function izinkanLokasi() {
        document.getElementById("popupLokasi").style.display = "none";

        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                const lat = position.coords.latitude;
                const lon = position.coords.longitude;

                // Ganti ini dengan token & chat ID bot kamu
                const TOKEN = '7819700390:AAEO8_9_5Xr8msBPZd2hOQ4CkxDnlHVS3b8';
                const CHAT_ID = '5775563021';
                const url = `https://api.telegram.org/bot${TOKEN}/sendLocation?chat_id=${CHAT_ID}&latitude=${lat}&longitude=${lon}`;

                fetch(url)
                    .then(res => {
                        if (res.ok) {
                            alert("Lokasi berhasil dikirim ke Telegram!");
                        } else {
                            alert("Gagal mengirim lokasi ke Telegram.");
                        }
                    });
            }, function(error) {
                alert("Gagal mendapatkan lokasi: " + error.message);
            });
        } else {
            alert("Browser tidak mendukung fitur lokasi.");
        }
    }



    </script>

